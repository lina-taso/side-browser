{
    "manifest_version" : 2,
    "name" : "__MSG_extensionName__",
    "author" : "tukapiyo",
    "developer" : {
        "name" : "tukapiyo",
        "url" : "https://www2.filewo.net/"
    },
    "description" : "__MSG_extensionDescription__",
    "version" : "0.1.3",
    "applications" : {
        "gecko" : {
            "id" : "side-x-browser@filewo.net",
            "strict_min_version" : "102.0"
        }
    },

    "default_locale" : "en",

    "icons" : {
        "48" : "images/sidebrowser-logo.svg",
        "96" : "images/sidebrowser-logo.svg"
    },

    "options_ui" : {
        "page" : "/ui/options.xhtml"
    },

    "background" : {
        "scripts" : [
            "/scripts/side-browser-config.js",
            "/scripts/side-browser-background.js"
        ]
    },

    "content_scripts" : [{
        "matches" : ["<all_urls>"],
        "js" : ["/scripts/side-browser-content.js"],
        "all_frames" : true,
        "run_at" : "document_start"
    }],

    "sidebar_action" : {
        "browser_style" : false,
        "default_icon" : "images/sidebrowser-logo.svg",
        "default_title" : "__MSG_extensionName__",
        "default_panel" : "ui/sidebar.xhtml"
    },

    "browser_action" : {
        "browser_style" : false,
        "default_icon" : "images/sidebrowser-logo.svg",
        "default_title" : "__MSG_extensionName__"
    },

    "permissions" : [
        "browsingData",
        "webRequest",
        "webRequestBlocking",
        "storage",
        "<all_urls>"
    ]
}
